extends layout.pug
block extraHeader
  link(rel="stylesheet" href="loginStyle.css")
block content
  .d-flex.justify-content-center.h-100
    .card
      .card-header
        h3 Log In
        .d-flex.justify-content-end.social_icon
          span
            i.fab.fa-facebook-square
          span
            a(href="/signUp/google")
              i.fab.fa-google-plus-square
      .card-body
        if errors
            each error in errors
              .alert.alert-danger= error
        form(action="/logIn" method="POST")
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-user
            input.form-control(type='text' placeholder='username' name='username' required)
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-key
            input.form-control(type='password' placeholder='password' name='password' required)
          .row.align-items-center.remember
            input(type='checkbox' name='remember')
            | Remember Me
          .form-group
            input.btn.float-right.login_btn(type='submit' value='Login')
      .card-footer
        .d-flex.justify-content-center.links
          | Don&apos;t have an account?
          a(href='#') Sign Up
        .d-flex.justify-content-center
          a(href='#') Forgot your password?